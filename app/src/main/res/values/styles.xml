<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppLabelText">
        <item name="android:textColor">@color/main_app_color</item>
        <item name="android:textSize">@dimen/dimen_28sp</item>
        <item name="android:fontFamily">@font/quick_sand_bold</item>
    </style>

    <style name="AppLabelTextSubheader">
        <item name="android:textColor">@color/main_app_color</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
        <item name="android:fontFamily">@font/quick_sand_semi_bold</item>
    </style>

    <style name="AppLabelTextInformation">
        <item name="android:textColor">@color/main_app_color_alpha80</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:fontFamily">@font/quick_sand_medium</item>
    </style>
</resources>
